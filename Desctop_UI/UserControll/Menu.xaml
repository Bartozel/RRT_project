<UserControl x:Class="DUI.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="menu">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="bStart" Content="Start" Click="bStart_Click"  Grid.Row="0"/>
        <Button x:Name="bStop" Content="Stop" Click="bStop_Click" Grid.Row="1"/>
        <Button x:Name="bPause" Content="Pause" Click="bPause_Click" Grid.Row="2"/>
        <Button x:Name="bRestart" Content="Restart" Click="bRestart_Click" Grid.Row="3"/>
        <Button x:Name="bSetting" Content="Setting" Click="bSetting_Click" Grid.Row="4"/>


    </Grid>
</UserControl>
