<UserControl x:Class="PathFindingSimulator.Wpf.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PathFindingSimulator.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="MapCanvas" Background="Transparent">
            <Rectangle x:Name="StartPoint" Fill="Green" Width="20" Height="20" Canvas.Left="50" Canvas.Top="50"/>
            <Rectangle x:Name="EndPoint" Fill="Red" Width="20" Height="20" Canvas.Left="200" Canvas.Top="200"/>
            <Rectangle x:Name="Obstacle" Fill="Gray" Width="20" Height="20" Canvas.Left="100" Canvas.Top="100"/>
            
        </Canvas>
    </Grid>
</UserControl>
